@model Projeto2020.Models.RecebeCarroVM

@{
    ViewBag.Title = "Receber veículo";
}

<h2>Receber o veiculo</h2>

@using (Html.BeginForm("Recebe", "Funcionarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CarroId)
    @Html.HiddenFor(model => model.CarroViewModelID)

    <div class="form-horizontal">
        <h4>Receber</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.deposito, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.deposito, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.deposito, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.km, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.km, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.km, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.imagem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-group">
                <input type="file" name="files" multiple />
            </div>
        </div>

    </div>
    <div>
        @Html.EditorFor(x => x.verifications)
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Confirmar receção" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Área de funcionário", "AreaFunc")
</div>