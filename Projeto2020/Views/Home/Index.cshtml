@{
    ViewBag.Title = "Home Page";
}

@if (User.IsInRole("Cliente") || !(User.Identity.IsAuthenticated)) { 
<div class="jumbotron">
    <h1>Viseu Car eRenting</h1>
    <p class="lead">Viseu car eRenting is one of the first available options of renting cars in the district of Viseu, just one click away!</p>
    <p><a href='@Url.Action("Index", "Carros")' class="btn btn-primary btn-lg">Our catalog&raquo;</a></p>
</div>
}

<div class="row">
    @if (!(User.Identity.IsAuthenticated))
    {
        <div class="col-md-4">
            <h2>Registar como cliente</h2>
            <p>Para efetuar reservas!</p>
            <input type="button" class="btn btn-info" value="Registar como cliente »" onclick="location.href='@Url.Action("Register", "Account", new { id = 1})'" />
        </div>
    }
    @if (!(User.Identity.IsAuthenticated) || User.IsInRole("Cliente"))
    {
        <div class="col-md-4">
            <h2>Ver catálogo de produtos</h2>
            <p>
                Ver os nossos veiculos e preçários!
            </p>
            <input type="button" class="btn btn-info" value="Ver catálogo »" onclick="location.href = '@Url.Action("Index", "Carros")'" />
        </div>
        <div class="col-md-4">
            <h2>Registar como empresa de Renting</h2>
            <p>Pode registar aqui a sua empresa de renting!</p>
            <input type="button" class="btn btn-info" value="Registar como empresa »" onclick="location.href = '@Url.Action("Register", "Account", new { id=2})'" />
        </div>
    }
    @if (User.IsInRole("Empresa"))
    {
        <div class="jumbotron">
            <h1>Ver detalhes sobre a sua empresa</h1>
            <p class="lead">Pode fazer a gestão dos administradores e funcionários da sua empresa</p>
            <p><a href='@Url.Action("DetalhesFunc", "Account")' class="btn btn-primary btn-lg">Área de gestão da empresa&raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Gestão do catalógo de veículos</h2>
            <p>Pode ver aqui os veículos da empresa e adicionar novos!</p>
            <input type="button" class="btn btn-info" value="Ver veículos »" onclick="location.href = '@Url.Action("IndexEmpresa", "Carros")'" />
        </div>
        <div class="col-md-4">
            <h2>Verificações a veiculos</h2>
            <p>Aqui pode adicionar verificações novas e ver as suas verificações a cada tipo de viatura!</p>
            <input type="button" class="btn btn-info" value="Ver verificações »" onclick="location.href = '@Url.Action("MyVerificacao", "Empresa")'" />
        </div>
    }
    @if (User.IsInRole("Funcionário"))
    {
        <div class="jumbotron">
            <h1>Área do funcionário</h1>
            <p class="lead">Aqui pode ver gerenciar as reservas e ter acesso às suas operações!</p>
            <p><a href='@Url.Action("AreaFunc", "Funcionarios")' class="btn btn-primary btn-lg">Área do funcionário&raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Gestão do catalógo de veículos</h2>
            <p>Pode ver aqui os veículos da empresa!</p>
            <input type="button" class="btn btn-info" value="Ver veículos »" onclick="location.href = '@Url.Action("IndexEmpresa", "Carros")'" />
        </div>
    }
    @if (User.IsInRole("Admin"))
    {
        <div class="jumbotron">
            <h1>Ver área de administração</h1>
            <p class="lead">Pode fazer acesso às operações do administrador!</p>
            <p><a href='@Url.Action("adminarea", "Home")' class="btn btn-primary btn-lg">Área do admin&raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Gestão de categorias de veículos</h2>
            <p>Pode ver aqui as categorias permitidas de veículos no website e adicionar novas!</p>
            <input type="button" class="btn btn-info" value="Ver categorias »" onclick="location.href = '@Url.Action("Index", "Categorias")'" />
        </div>
    }
</div>
